<?xml version='1.0' encoding='utf-8'?>
<widget id="com.chaosscape.aerophane" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Aerophane</name>
    <description>
        A lightweight basic template for Cordova apps.
    </description>
    <author email="chrisbroski@gmail.com" href="http://chaosscape.com">
        Chris Broski
    </author>
    <content src="home/home.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <engine name="ios" spec="~4.5.4" />
</widget>
